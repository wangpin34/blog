{
  "ts-node": {
    "compilerOptions": {
      "module": "commonjs",
      "importHelpers": true
    }
  },
  "compilerOptions": {
    "baseUrl": "src",
    "target": "es2015",
    "lib": ["esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "types": ["node"]
  },
  "include": ["src"]
}
